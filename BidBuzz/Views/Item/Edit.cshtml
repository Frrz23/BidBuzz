@model Models.Models.Item

<h2>Edit Item</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ItemID" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="mb-3 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        }
        else
        {
            <p>No Image Available</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Item Name</label>
        <input asp-for="ItemName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="ItemDescription" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="PendingApproval">Pending Approval</option>
            <option value="Approved">Approved</option>
            <option value="InAuction">In Auction</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Start Time</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">End Time</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Image (optional)</label>
        <input type="file" name="file" class="form-control border-0 shadow" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
