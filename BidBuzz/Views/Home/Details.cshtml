@model Item

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3" style="max-width: 900px; margin: auto;">
        <div class="row g-4 align-items-center">
            <!-- Item Image -->
            <div class="col-md-5 text-center">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Item Image" style="max-height: 400px; object-fit: cover;">
            </div>

            <!-- Item Details -->
            <div class="col-md-7">
                <h1 class="fw-bold text-primary mb-2">@Model.Name</h1>
                <h5 class="text-muted">Category: <span class="text-secondary">@Model.Category?.Name</span></h5>
                <h6 class="text-muted">Condition: <span class="badge bg-info text-dark">@Model.Condition</span></h6>

                <p class="mt-3 text-secondary lh-base">@Html.Raw(Model.Description)</p>

                <!-- Price Section -->
                <h4 class="text-success fw-semibold">Starting Price: $@Model.StartingPrice.ToString("F2")</h4>

                <!-- Quantity Section -->
                <div class="mt-3">
                    <strong class="text-secondary">Available Quantity:</strong>
                    <span class="fw-bold">@Model.Quantity</span>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex gap-3">
                    <a href="/Home/Index" class="btn btn-outline-secondary">Back to Listing</a>
                    <button type="button" class="btn btn-primary">Place a Bid</button>
                </div>
            </div>
        </div>
    </div>
</div>
