@model IEnumerable<Item>

<div class="pt-3">
    <h3>
        <i class="bi bi-star"></i> Items
    </h3>
    <div class="row pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@item.ImageUrl" class="card-img-top item-image" />
                            <div class="card-body pb-0 ">
                                <div class="pl-1">
                                    <p class="card-title h3 text-dark opacity-75 text-uppercase text-center">@item.Name</p>
                                    <p class="card-title text-warning h4 text-center">by <b>@item.Condition</b></p>
                                </div>
                                <div class="pl-1 h5">
                                    <p class="text-dark text-opacity-75 text-center mb-0">
                                        Bidding Price:
                                        <span class="text-decoration-line-through">
                                            @* रु *@ $ @item.StartingPrice.ToString("N")
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <div>
                                <a asp-action="Details"
                                   asp-route-itemId="@item.Id"
                                   class="btn btn-info bg-gradient border-0 form-control ">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
