@page
@model RegisterModel

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-dark text-white text-center py-4">
                    @if (User.IsInRole(Roles.Admin))
                    {
                        <h2 class="fs-3 fw-bold mb-0">Register - ADMIN PORTAL</h2>
                    }
                    else
                    {
                        <h2 class="fs-3 fw-bold mb-0">Create an Account</h2>
                    }
                </div>
                <div class="card-body p-4 p-md-5 bg-light">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger p-2" role="alert"></div>

                        <div class="row">
                            <div class="col-12 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.Full_Name" class="form-control border-secondary" placeholder="John Doe" />
                                    <label asp-for="Input.Full_Name" class="text-muted">Full Name</label>
                                    <span asp-validation-for="Input.Full_Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control border-secondary" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.PhoneNumber" class="form-control border-secondary" maxlength="10" pattern="\d{10}" title="Enter 10 digit phone number" />
                                    <label asp-for="Input.PhoneNumber" class="text-muted">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.Age" class="form-control border-secondary" type="number" min="0" max="120" placeholder="Age" />
                                    <label asp-for="Input.Age">Age</label>
                                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.Address" class="form-control border-secondary" placeholder="Address" />
                                    <label asp-for="Input.Address">Address</label>
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.Password" class="form-control border-secondary" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control border-secondary" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            @if (User.IsInRole(Roles.Admin))
                            {
                                <div class="col-12 mb-4">
                                    <div class="form-floating">
                                        <select asp-for="Input.Role" asp-items="@Model.Input.RolesList" class="form-select border-secondary">
                                            <option disabled selected>--Select a Role</option>
                                        </select>
                                        <label asp-for="Input.Role">User Role</label>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg py-3">Create Account</button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="mb-0">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold">Sign In</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}