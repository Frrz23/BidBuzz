@model Models.Models.ViewModels.AuctionVM

@{
    ViewData["Title"] = "Update Auction";
}

<h2>Update Auction</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Auction.Id" />

    <div class="mb-3">
        <label class="form-label">Item Name</label>
        <input class="form-control" value="@Model.Item.Name" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Auction.Status" class="form-label">Auction Status</label>
        <select asp-for="Auction.Status" class="form-control" asp-items="Html.GetEnumSelectList<AuctionStatus>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Auction.StartTime" class="form-label">Auction Start Time</label>
        <input asp-for="Auction.StartTime" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Auction.EndTime" class="form-label">Auction End Time</label>
        <input asp-for="Auction.EndTime" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
