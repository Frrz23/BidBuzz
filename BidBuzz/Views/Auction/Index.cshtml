@model IEnumerable<Models.Models.ViewModels.AuctionVM>

<h2>Auction Management</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auctionVM in Model)
        {
            <tr>
                <td>@auctionVM.Item.Name</td>
                <td>@(auctionVM.Auction?.StartTime?.ToString("yyyy-MM-dd") ?? "Not Set")</td>
                <td>@(auctionVM.Auction?.EndTime?.ToString("yyyy-MM-dd") ?? "Not Set")</td>
                <td>@(auctionVM.Auction?.Status.ToString() ?? "Not in Auction")</td>
                <td>
                    <a asp-action="Update" asp-route-id="@auctionVM.Auction?.Id" class="btn btn-primary btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
