@model IEnumerable<Models.Models.Auction>

@{
    ViewData["Title"] = "Manage Auctions";
}

<h2>Manage Auctions</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Status</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auction in Model)
        {
            <tr>
                <td>@auction.Item?.Name</td>
                <td>@auction.Status</td>
                <td>@auction.StartTime?.ToString("g")</td>
                <td>@auction.EndTime?.ToString("g")</td>
                <td>
                    <a asp-action="Update" asp-route-id="@auction.Id" class="btn btn-primary btn-sm">Update</a>
                    @if (auction.Status == AuctionStatus.InAuction)
                    {
                        <form asp-action="StopAuction" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@auction.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Stop Auction</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
